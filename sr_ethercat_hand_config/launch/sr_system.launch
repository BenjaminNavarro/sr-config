<launch>

  <group ns="rh">
    <remap from="/diagnostics" to="/rh/diagnostics" />
    <remap from="/diagnostics_agg" to="/rh/diagnostics_agg" />
    <include file="$(find sr_edc_launch)/sr_edc.launch" >
      <arg name="config_dir" value="" />
      <arg name="eth_port" value="eth1" />
      <arg name="set_description" value="1" />
      <arg name="hand_description" value="$(find sr_description)/robots/shadowhand_motor.urdf.xacro" />
      <arg name="tf_prefix" value="rh" />
    </include>
  </group>

  <group ns="lh">
    <remap from="/diagnostics" to="/lh/diagnostics" />
    <remap from="/diagnostics_agg" to="/lh/diagnostics_agg" />
    <include file="$(find sr_edc_launch)/sr_edc.launch" >
      <arg name="config_dir" value="lh/" />
      <arg name="eth_port" value="eth0" />
      <arg name="set_description" value="1" />
      <arg name="hand_description" value="$(find sr_description)/robots/shadowhand_left_motor.urdf.xacro" />
      <arg name="tf_prefix" value="lh" />
    </include>
  </group>

</launch>
